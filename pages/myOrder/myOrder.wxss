.myOrder {
    background: rgba(242, 242, 244, 1);
    height: 100%;
    overflow: scroll;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(67, 67, 67, 1);
}

.container {
    padding: 32rpx;
    box-sizing: border-box;
    position: relative;
    transition: all 0.5s;
}

.refresh {
    transform: translateY(40rpx);
}

.order_info {
    padding: 16rpx;
    box-sizing: border-box;
    font-size: 24rpx;
}

.margin_bottom_8 {
    margin-bottom: 16rpx;
}

.circular {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin-right: 12rpx;
}

.circular_green {
    background: rgba(20, 168, 40, 1);
}

.circular_red {
    background: rgba(220, 62, 56, 1);
}

.goods_info {
    background: rgba(246, 246, 246, 1);
    border-radius: 6px;
    height: 64rpx;
    line-height: 64rpx;
    padding-left: 16rpx;
    margin-bottom: 32rpx;
}

.goods_icon_parent {
    height: 100%;
    display: flex;
    align-items: center;
    margin-right: 16rpx;
}

.goods_icon {
    width: 36rpx;
    height: 36rpx;
}

.price {
    color: #DC3E38;
    font-size: 28rpx;
}

.empty {
    margin-top: 48rpx;
    text-align: center;
}

.next {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 16rpx;
    left: 0;
}

.loading {
    width: 100%;
    text-align: center;
}
.goods_max{
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.flex{
    display: flex;
}