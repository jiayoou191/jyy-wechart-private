/* components/historySearch/historySearch.wxss */

.historySearch {
    margin-top: 64rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(170, 170, 170, 1);
    margin-left: 32rpx;
    margin-right: 32rpx;

}

.historySearch_title {
    display: flex;
    justify-content: space-between;
    margin-bottom: 32rpx;
    height: 50rpx;
}

.historySearch_delete_queren {
    /* width: 80rpx;
    height: 50rpx; */
    width: 72rpx;
    height: 36rpx;
    background: rgba(220, 62, 56, 1);
    border-radius: 24rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
    text-align: center;
    z-index: 3;
    margin-bottom: 14rpx;


}

.historySearch_delete {
    width: 80rpx;
    height: 50rpx;
    /* position: absolute; */
    z-index: 3;
}

image {
    /* padding-left: 10rpx; */
    float: right;
    width: 24rpx;
    height: 26rpx;
}

.historySearch_title_label {
    color: rgba(170, 170, 170, 1);
}

.historySearch_content_size {
    height: 48rpx;
    line-height: 48rpx;
    background: rgba(246, 246, 246, 1);
    border-radius: 8px;
    /* display: flex;
    justify-content: space-between; */
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin-bottom: 16rpx;

}

.historySearch_content_size_active {
    background: rgba(246, 246, 246, 0.6);
}

.historySearch_content_goods {
    /* max-width: 100rpx; */
    float: left;
    overflow: hidden;
}

.historySearch_content_goods_name {
    max-width: 194rpx;
    overflow: hidden;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: rgba(170, 170, 170, 1);
}

.historySearch_content_address {
    float: right;
    /* display: inline-block; */
}

.historySearch_content_address view {
    max-width: 160rpx;
    overflow: hidden;
    float: left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.mask {
    width: 100%;
    height: 100%;
    position: absolute;
    background: rgba(255, 255, 255, 0);
    z-index: 2;
    top: 0;
    left: 0;
    opacity: 0.5;
}


.over {
    overflow: hidden;
    zoom: 1;
}