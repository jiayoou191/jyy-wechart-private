.card {
    background: rgba(255, 255, 255, 1);
    border-radius: 16rpx;
    font-weight: 400;
    color: rgba(67, 67, 67, 1);
    margin-bottom: 32rpx;
}

.clickColor {
    background: rgba(242, 242, 244, 1);
}

.title {
    height: 80rpx;
    line-height: 80rpx;
    box-shadow: 0px 0px 0px 0px rgba(221, 221, 221, 1);
    border-radius: 16rpx 16rpx 0px 0px;
    border-bottom: 2rpx solid #f5f5f5;
    padding: 0 16rpx;
    box-sizing: border-box;
    font-weight: 500;
    color: rgba(67, 67, 67, 1);
    font-size: 28rpx;
}

.title_left {
    float: left;
    display: flex;
    height: 100%;
    align-items: center;
}

.title_left_icon {
    width: 34rpx;
    margin-right: 16rpx;
    /* margin-top: 12px; */
    vertical-align: middle;
}

.title_right {
    float: right;
    font-weight: 400;
    font-size: 28rpx;
    /* color: rgba(67, 67, 67, 1); */
}

.image_center {
    height: 100%;
    display: flex;
    align-items: center;
}

.margin_left_8 {
    margin-left: 16rpx;
}